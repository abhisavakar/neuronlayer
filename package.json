{
  "name": "memorylayer",
  "version": "0.1.0",
  "description": "Persistent memory layer for AI coding assistants - MCP server that makes AI truly understand your codebase",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "memorylayer": "dist/index.js",
    "memcode": "dist/agent.js",
    "memcode-tui": "dist/tui.js"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "build:benchmark": "node esbuild.benchmark.cjs",
    "build:all": "npm run build && npm run build:benchmark",
    "dev": "node --watch dist/index.js",
    "start": "node dist/index.js",
    "agent": "node dist/agent.js",
    "memcode": "npx tsx src/tui-terminal/cli.tsx",
    "memcode:agent": "node dist/agent.js",
    "tui": "npx tsx src/tui-terminal/cli.tsx",
    "tui:build": "node esbuild.config.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "benchmark": "npm run build:all && node dist/benchmark/working-benchmark.js",
    "benchmark:quick": "npm run build:all && node dist/benchmark/working-benchmark.js --quick",
    "benchmark:full": "npm run build:all && node dist/benchmark/working-benchmark.js --iterations 50",
    "benchmark:publication": "npm run build:all && node dist/benchmark/publication-benchmark.js --publication",
    "benchmark:standard": "npm run build:all && node dist/benchmark/publication-benchmark.js --preset standard",
    "benchmark:download": "npm run build:benchmark && node dist/benchmark/project-downloader.js",
    "benchmark:analyze": "npm run build:benchmark && node dist/benchmark/analyze-results.js",
    "benchmark:opencode": "npm run build:all && node dist/benchmark/opencode-benchmark.js",
    "benchmark:opencode:quick": "npm run build:all && node dist/benchmark/opencode-benchmark.js --iterations 1",
    "benchmark:opencode:full": "npm run build:all && node dist/benchmark/opencode-benchmark.js --iterations 5",
    "benchmark:memcode": "npm run build:all && node dist/benchmark/memcode-vs-opencode.js",
    "benchmark:memcode:quick": "npm run build:all && node dist/benchmark/memcode-vs-opencode.js --iterations 1"
  },
  "keywords": [
    "mcp",
    "ai",
    "memory",
    "context",
    "codebase",
    "claude",
    "embeddings",
    "agent",
    "coding-assistant",
    "llm"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^11.0.0",
    "chokidar": "^3.6.0",
    "glob": "^10.0.0",
    "ink": "^6.7.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.4",
    "react-devtools-core": "^4.28.5",
    "react-dom": "^19.2.4",
    "web-tree-sitter": "^0.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.20.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
